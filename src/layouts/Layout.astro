---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Gabriel Oyarzo | Portafolio</title>
  </head>
  <body>
    <div
      class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,var(--color-primary-100),var(--color-gray-50))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-gray-50);
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color: var(--color-gray-950);
    overflow-x: hidden;
  }
</style>

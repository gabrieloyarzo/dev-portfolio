---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="es" class="overflow-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Gabriel Oyarzo | Portfolio</title>
  </head>
  <Navbar />
  <body>
    <div
      class="fixed inset-0 -z-10 w-full bg-gray-50
         bg-[radial-gradient(var(--color-gray-200)_1px,transparent_1px)]
         [background-size:16px_16px] sm:visible invisible"
    >
    </div>
    <slot />
  </body>
  <Footer />
</html>

<style>
  html {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-gray-50);
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color: var(--color-gray-950);
    overflow-x: hidden;
  }
</style>
